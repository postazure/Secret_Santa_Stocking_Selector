<!DOCTYPE html>
<html>
  <head>
    <title>SecretSanta</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container">
        <%= link_to "Groups", groups_path, class:"navbar-brand" %>
        <div class="pull-right" >
          <% if user_signed_in? %>
            <%= link_to 'Sign out', destroy_user_session_path, class:"btn btn-default navbar-btn", :method => :delete %>
          <% else %>
            <%= link_to 'Sign in', new_user_session_path, class:"btn btn-primary navbar-btn"  %>
            <%= link_to "Sign up", new_user_registration_path, class:"btn btn-default navbar-btn" %>
          <% end %>
        </div>
      </div>
    </nav>
  </head>
  <body>

    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
